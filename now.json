{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": ".*",
      "methods": [
        "GET",
        "POST",
        "DELETE",
        "PUT",
        "OPTIONS"
      ],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept",
        "Access-Control-Allow-Credentials": "true"
      },
      "dest": "app.js",
      "continue": true
    },
    {
      "src": "/markers/(?<id>[^/]+)",
      "dest": "/app.js/?id=$id",
      "methods": [
        "DELETE"
      ]
    },
    {
      "src": "/markers/(?<id>[^/]+)",
      "dest": "/app.js/?id=$id",
      "methods": [
        "PUT"
      ]
    },
    {
      "src": "/markers/(?<id>[^/]+)",
      "dest": "/app.js/?id=$id",
      "methods": [
        "GET"
      ]
    },
    {
      "src": "/markers",
      "dest": "/app.js",
      "methods": [
        "GET"
      ]
    },
    {
      "src": "/markers",
      "dest": "/app.js",
      "methods": [
        "POST"
      ]
    }
  ]
}